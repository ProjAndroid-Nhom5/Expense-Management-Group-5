                android:layout_marginEnd="12dp"
                android:layout_marginVertical="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darknavyblue">

                    <TextView
                        android:id="@+id/NameEcommerce1"
                        android:layout_width="175dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="11dp"
                        android:text="Name Ecommerce:"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/inputNameEcommerce1"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/NameEcommerce1"
                        android:layout_alignTop="@id/NameEcommerce1"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:inputType="text"
                        android:backgroundTint="@color/white"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/NameStore1"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/NameEcommerce1"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:text="Name Store:"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/inputNameStore1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/NameEcommerce1"
                        android:layout_marginStart="69dp"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="7dp"
                        android:layout_toEndOf="@id/NameStore1"
                        android:backgroundTint="@color/white"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

