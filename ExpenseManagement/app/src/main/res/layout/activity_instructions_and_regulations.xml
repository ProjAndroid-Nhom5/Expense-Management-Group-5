<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instructions_and_regulations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Instructions_and_regulations">

    <RelativeLayout
        android:id="@+id/header_instructions_and_regulations"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#D0EFED"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginTop="12dp"
            android:id="@+id/left_instructions_and_regulations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/left" />

        <TextView
            android:id="@+id/instructions_and_regulations_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dp"
            android:text="Instructions and regulations"
            android:textColor="#0570AC"
            android:textStyle="bold"
            android:textSize="22dp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/header_instructions_and_regulations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:id="@+id/instructions_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#58CBD2"
                android:layout_centerInParent="true"
                android:text="1. Instructions"
                android:textSize="24sp"
               />

            <TextView
                android:id="@+id/regulations_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/instructions_text"
                android:textColor="#58CBD2"
                android:layout_weight="2"
                android:text="2. Regulations"
                android:textSize="24sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>